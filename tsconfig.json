{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "lib": ["es2020", "DOM", "DOM.Iterable"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["dist", "node_modules", "tests"]
}
